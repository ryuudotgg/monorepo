{
  "name": "@ryuu/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/src/client.d.ts",
      "default": "./src/client.ts"
    },
    "./helpers": {
      "types": "./dist/src/helpers/index.d.ts",
      "default": "./src/helpers/index.ts"
    },
    "./schema": {
      "types": "./dist/src/schema/index.d.ts",
      "default": "./src/schema/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path .prettierignore",
    "generate": "pnpm with-env drizzle-kit generate",
    "lint": "eslint",
    "migrate": "pnpm with-env drizzle-kit migrate",
    "studio": "pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "prettier": "@ryuu/prettier-config",
  "dependencies": {
    "@planetscale/database": "^1.19.0",
    "@ryuu/env": "workspace:*",
    "@ryuu/shared": "workspace:*",
    "@t3-oss/env-nextjs": "catalog:",
    "drizzle-orm": "^0.41.0",
    "drizzle-zod": "^0.7.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ryuu/eslint-config": "workspace:*",
    "@ryuu/prettier-config": "workspace:*",
    "@ryuu/tsconfig": "workspace:*",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.30.6",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  }
}
